import PyConLogo from "./PyConLogo.astro";

const NavItems = [
  {
    label: "Home",
    link: "/",
  },
  {
    label: "About",
    link: [
      {
        label: "PyCon MY",
        labelLink: "/about",
        link: [
          // {
          //   label: "All partners",
          //   link: "/all-partners",
          // },
          {
            label: "All sponsors",
            link: "/all-sponsors",
          },
          {
            label: "All volunteers",
            link: "/all-volunteers",
          },
          // {
          //   label: "All speakers",
          //   link: "/all-speakers",
          // },
        ],
      },
      {
        label: "PyCon / PSF",
        link: "/psf",
      },
      {
        label: "Code of Conduct",
        link: "/codeofconduct",
      },
    ],
  },
  {
    label: "Events",
    link: [
      {
        label: "PyCon MY 2024",
        labelLink: "/",
        link: [
          {
            label: "Ticket",
            link: "/ticket"
          },
          {
            label: "CFP",
            link: "/cfp"
          },
          {
            label: "Speakers",
            link: "/speakers"
          },
          {
            label: "Agenda",
            link: "/agenda"
          },
          {
            label: "Venue",
            link: "/venue",
          },
          // {
          //   label: "Financial Aid",
          //   link: "/aid"
