---
import BaseLayout from "../layouts/BaseLayout.astro";
import SpeakerCard from "../components/SpeakerCard.astro";
import { VolunteerList } from "../volunteerList";
---

<BaseLayout title="PyCon MY Speakers">
  <div class="flex flex-col items-center justify-center bg-yellow py-8">
    <h3 class="my-8 text-black-900 font-bold text-xl sm:text-3xl">
      Volunteers
    </h3>
    <div class="flex flex-wrap justify-center gap-2 mt-4">
      {
        VolunteerList.map((volunteer) => (
          <SpeakerCard image={volunteer.image} name={volunteer.name} />
        ))
      }
    </div>
  </div>
</BaseLayout>
