---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroImage from "../components/HeroImage.astro";
import SpeakerCarousel from "../components/SpeakerCarousel.astro";
import Countdown from "../components/Countdown.astro";
import SponsorList from "../components/SponsorList.astro";

const register_link = "#";
const cfs_link = "#";
const cfp_link = "#";

import { SponsorLists } from "../sponsorLists";
import { AllSpeakers, KeyNoteSpeakers } from "../speakerLists";
---

<BaseLayout title="PyCon MY 2024">
  <HeroImage />
  <div class="bg-blue flex flex-col items-center justify-center">
    <a href={register_link} class="mt-16 w-72 mb-12">
      <div class="relative">
        <img class="absolute" src="/assets/Register_Mouse_Up.png" />
        <img
          class="absolute opacity-0 hover:opacity-100"
          src="/assets/Register_Mouse_Over.png"
        />
      </div>
    </a>

    <a href={cfs_link} class="mt-8 w-72 mb-12"
      ><div class="relative">
        <img class="absolute" src="/assets/CFS_Mouse_Up.png" />
        <img
          class="absolute opacity-0 hover:opacity-100"
          src="/assets/CFS_Mouse_Over.png"
        />
      </div></a
    >
    <a href={cfp_link} class="mt-8 w-72 mb-24">
      <div class="relative">
        <img class="absolute" src="/assets/CFP_Mouse_Up.png" />
        <img
          class="absolute opacity-0 hover:opacity-100"
          src="/assets/CFP_Mouse_Over.png"
        />
      </div></a
    >
    <h3 class="mt-16 text-white font-bold text-xl sm:text-3xl">
      Keynote Speakers
    </h3>
    <SpeakerCarousel speakers={KeyNoteSpeakers} />
    <h3 class="mt-8 text-white font-bold text-xl sm:text-3xl">
      Meet our Speakers
    </h3>
    <SpeakerCarousel speakers={AllSpeakers} />
    <Countdown />
    <span class="mt-10 mb-10 font-bold text-xl sm:text-3xl text-white"
      >until</span
    >
    <img
      class="object-contain h-48 w-48"
      src="/pycon24_logo.png"
      alt="PyCon MY 2024 Logo"
    />
    <a href={register_link} class="mt-8 w-72 mb-36">
      <div class="relative">
        <img class="absolute" src="/assets/Register_Mouse_Up.png" />
        <img
          class="absolute opacity-0 hover:opacity-100"
          src="/assets/Register_Mouse_Over.png"
        />
      </div>
    </a>
  </div>
  <SponsorList sponsors={SponsorLists} />
</BaseLayout>
