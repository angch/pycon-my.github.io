---
import BaseLayout from "../layouts/BaseLayout.astro";

import { AgendaDayOne, AgendaDayTwo } from "../agenda";
---

<BaseLayout title="Agenda">
  <div class="flex flex-col items-center justify-center bg-yellow py-8">
    <h3 class="my-8 text-black-900 font-bold text-xl sm:text-3xl">
      Day 1 (24 August 2024)
    </h3>
    <ul class="timeline timeline-vertical timeline-compact">
        {AgendaDayOne.map((agenda) =>
      <li>
        <hr />
        
        <div class="timeline-start font-semibold text-pink">{agenda.time}</div>
        <div class="timeline-middle">
          <div class="w-4 h-4 bg-black-900 rounded-full"></div>
    </div>
        <div class="timeline-end font-black-900 flex flex-row gap-6">
          {agenda.events.map((a)=>
          <div class="timeline-box">
            <div class="text-lg font-bold">
                {a.agenda}
            </div>
            <div class="text-sm font-semibold">
                {a.subtitle}    
            </div>
            <div class="text-sm font-normal">
                {a.location}
            </div>
          </div>
          )}
        </div>
        
        
        <hr />
      </li>
      )}
    </ul>

    <h3 class="my-8 mt-24 text-black-900 font-bold text-xl sm:text-3xl">
      Day 2 (25 August 2024)
    </h3>
    <ul class="timeline timeline-vertical timeline-compact">
        {AgendaDayTwo.map((agenda) =>
      <li>
        <hr />
        
        <div class="timeline-start font-semibold text-pink">{agenda.time}</div>
        <div class="timeline-middle">
          <div class="w-4 h-4 bg-black-900 rounded-full"></div>
    </div>
        <div class="timeline-end font-black-900 flex flex-row gap-6">
          {agenda.events.map((a)=>
          <div class="timeline-box">
            <div class="text-lg font-bold">
                {a.agenda}
            </div>
            <div class="text-sm font-semibold">
                {a.subtitle}    
            </div>
            <div class="text-sm font-normal">
                {a.location}
            </div>
          </div>
          )}
        </div>
        
        
        <hr />
      </li>
      )}
    </ul>
  </div>
</BaseLayout>

<style>
.timeline-start{
    @apply self-baseline;
    @apply px-3
}
.timeline-end{
    @apply px-3
}
hr {
    @apply bg-pink;
}
</style>