---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout>
  <article class="flex justify-center bg-zinc text-black-900">
    <div class="prose prose-black-900 max-w-none">
      <div class="px-8 py-6 md:px-12 mx-auto lg:pt-24">
        <div class="lg:text-center">
          {
            frontmatter.image && (
              <img
                class="lg:h-72 w-full  object-cover object-center"
                src={frontmatter.image.url}
                alt={frontmatter.image.alt}
              />
            )
          }
          <h1
            class="text-3xl tracking-tight text-balance mt-12 lg:mt-16 font-medium font-display text-black-900 md:text-5xl"
          >
            {frontmatter.title}
          </h1>
          {
            frontmatter.description && (
              <p class="mt-8 mx-auto text-zinc-500">
                <em>{frontmatter.description}</em>
              </p>
            )
          }
        </div>

        <div class="mt-12 mx-auto text-black-900 prose-headings:text-black-900 prose-a:text-black-900 marker:prose-li:text-black-900">
          
            <slot />

        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .prose h3 {
    @apply text-black-900
  }
</style>